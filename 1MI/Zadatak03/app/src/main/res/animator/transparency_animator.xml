<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:ordering="together">
    <objectAnimator android:repeatMode="reverse" android:repeatCount="5"
        android:valueFrom="1"
        android:valueTo="0"
        android:propertyName="alpha"
        android:duration="5000"></objectAnimator>

    <objectAnimator
        android:valueFrom="0"
        android:valueTo="180"
        android:propertyName="rotation"
        android:duration="1000"
        ></objectAnimator>
    <objectAnimator
        android:startOffset="1000"
        android:valueFrom="180"
        android:valueTo="0"
        android:propertyName="rotation"
        android:duration="1000"
        ></objectAnimator>
</set>